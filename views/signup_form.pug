extends layout

block content
  form.auth-form(action="/sign-up" method="POST")
    h1= title
    p.auth-alternative Already registered? 
      a(href="log-in") Log in
    div
      label(for="username") Username: 
      input#username(type="text" name="username" required="true" maxLength="20")
      if (error)
        p(style="color: red;") #{error}
    div
      label(for="password") Password: 
      input#password(type="password" name="password" required="true")
    div
      label(for="confirmPassword") Confirm Password: 
      input#confirmPassword(type="password" name="confirmPassword" required="true")
      if (passwordConfirmationError)
        p(style="color: red;") #{passwordConfirmationError}

    button(type="submit") Register

  if (errors)
    p #{errors}